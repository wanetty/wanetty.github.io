---
const {visible} = Astro.props;
const { title } = Astro.props;

import { ViewTransitions } from 'astro:transitions';
---
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cybersecurity Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
</head>
<header class="lg:sticky xl:sticky dark:bg-slate-600 bg-slate-300 top-0" transition:animate="none">
    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <div class="flex items-center">
                <img src="/static/avatar.jpg" alt="Wanetty Avatar" class="adjust-on-scroll  h-12 w-12 rounded-full mr-2">
                <div class="text-center sm:text-left">
                    <h1 class="dark:text-white text-2xl font-bold adjust-on-scroll  text-gray-900 sm:text-3xl">Welcome to Wanetty Blog</h1>
                    <p class="hide-on-scroll mt-1.5 text-sm dark:text-gray-200 text-gray-500">Things about my experience in cybersecurity.</p>
                </div>
            </div>
            
            <div class="hide-on-scroll  mt-4 flex flex-col gap-4 sm:mt-0 sm:flex-row sm:items-center sm:text-center">
                   <button style={visible ? "" : "visibility: hidden;"} class="rounded-lg dark:bg-orange-400 bg-orange-500 px-5 py-3 text-sm font-medium text-white transition hover:bg-orange-300 focus:outline-none focus:ring flex justify-center items-center gap-2 sm:text-center" type="button" onclick="window.location.href='/'">
                        Home 
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="0.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0" />
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
                            <path d="M10 12h4v4h-4z" />
                          </svg>
                    </button>
                </slot>
                <button onclick="window.location.href='/construction'" class="rounded-lg dark:bg-orange-400 bg-orange-500 px-5 py-3 text-sm font-medium text-white transition hover:bg-orange-300 focus:outline-none focus:ring flex justify-center items-center gap-2 sm:text-center" type="button"  >
                    CV 
                    <svg  class="icon icon-tabler icon-tabler-notebook" width="24" height="24" viewBox="0 0 24 24" stroke-width="0.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M6 4h11a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-11a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1m3 0v18" />
                        <path d="M13 8l2 0" />
                        <path d="M13 12l2 0" />
                    </svg>     
                </button>
            </div>
        </div>
    </div>
</header>
