---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BackButton from "@/components/BackButton.astro";
import { fade  } from 'astro:transitions';

const { frontmatter } = Astro.props;
---
<!DOCTYPE html>
<html>
  <Header visible=true title={frontmatter.title}/>
  <body class="bg-slate-100 dark:bg-slate-900" transition:animate={fade({ duration: '1s' })}>
    <h1 class=" my-5 text-4xl md:text-5xl mx-10 lg:text-6xl font-bold text-center text-gray-900 dark:text-gray-100">{frontmatter.title}</h1>
    <div class="prose sm:prose-sm md:prose-md lg:prose-lg text-justify md:max-w-screen-md sm:max-w-screen-sm lg:max-w-screen-lg dark:prose-invert lg:mx-auto md:mx-auto mx-5 mb-10">
        <slot />
    </div>
    <BackButton />
  </body>
  <Footer />
</html>
